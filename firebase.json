{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
    "headers": [
			{
				"source": "/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0, no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "/service-worker.js",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0, no-cache, no-store, must-revalidate"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|svg)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=7200"
					}
				]
			}
		]
  }
}
